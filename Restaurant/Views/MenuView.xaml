<Window x:Class="Restaurant.Views.MenuView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Restaurant.Converters"
        Title="Meniu Restaurant" Height="800" Width="1200">
    <Window.Resources>
        <local:BooleanToAvailabilityConverter x:Key="BooleanToAvailabilityConverter" />
    </Window.Resources>

    <Grid Margin="10">
        <DockPanel LastChildFill="True">

            <!-- Partea stângă - Căutare + Categorii -->
            <StackPanel DockPanel.Dock="Left" Width="300" Margin="0,0,10,0">

                <!-- Zona de căutare -->
                <StackPanel Orientation="Vertical" Margin="10">
                    <!-- Căutare după denumire -->
                    <TextBlock Text="Name Search" FontWeight="Bold"/>
                    <TextBox Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}" Width="250"/>

                    <!-- CheckBox pentru include/exclude termenul -->
                    <CheckBox Content="Include" 
                  IsChecked="{Binding IncludeSearchTerm}" />

                    <!-- Separator vizual -->
                    <Separator Margin="0,10,0,10" />

                    <!-- Căutare după alergen -->
                    <TextBlock Text="Allergen Search" FontWeight="Bold"/>
                    <TextBox Text="{Binding AllergenQuery, UpdateSourceTrigger=PropertyChanged}" Width="250"/>

                    <!-- CheckBox pentru include/exclude alergenii -->
                    <CheckBox Content="Include" 
                  IsChecked="{Binding IncludeAllergen}" />
                </StackPanel>

                <!-- Lista de categorii -->
                <ListBox ItemsSource="{Binding Categories}"
             SelectedItem="{Binding SelectedCategory}"
             Margin="10">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}" 
                           Margin="10,5" 
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- Butonul Login/Register sub categorii -->
                <Button Content="Login / Register"
            Width="250"
            Margin="10,0,10,10"
            Padding="10,5"
            HorizontalAlignment="Stretch"
            />
            </StackPanel>

            <!-- Zona principală - Preparatele și Meniurile din categoria selectată -->
            <ScrollViewer>
                <StackPanel>

                    <!-- Afișare preparate -->
                    <TextBlock Text="Preparate:" FontWeight="Bold" Margin="10,10,0,5"/>

                    <ItemsControl ItemsSource="{Binding AllDishes}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Vertical" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#DDD"
                                        BorderThickness="1"
                                        CornerRadius="8"
                                        Padding="15"
                                        Margin="10"
                                        HorizontalAlignment="Stretch">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <!-- Informații despre preparat -->
                                        <StackPanel Grid.Column="0" VerticalAlignment="Top">
                                            <TextBlock Text="{Binding Name}" FontSize="20" FontWeight="Bold"/>
                                            <TextBlock Text="{Binding Price, StringFormat='Preț: {0:C}'}" Foreground="Green" FontSize="16"/>
                                            <TextBlock Text="{Binding QuantityPerPortion, StringFormat='Gramaj: {0:g}g'}" FontStyle="Italic"/>
                                            <TextBlock Text="{Binding AllergensString, StringFormat='Alergeni: {0}'}" Foreground="Red"/>
                                            <TextBlock Text="{Binding IsAvailable,Converter={StaticResource BooleanToAvailabilityConverter}}" FontWeight="Bold"/>
                                        </StackPanel>

                                        <!-- Imaginea produsului -->
                                        <Image Grid.Column="1"
                                               Source="{Binding ImageUrl}"
                                               MaxWidth="120"
                                               MaxHeight="120"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Top"
                                               Margin="10,0,0,0"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Afișare meniuri -->
                    <TextBlock Text="Meniuri:" FontWeight="Bold" Margin="10,20,0,5"/>

                    <ItemsControl ItemsSource="{Binding AllMenus}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Vertical" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#AAA"
                                        BorderThickness="1"
                                        CornerRadius="8"
                                        Padding="15"
                                        Margin="10"
                                        HorizontalAlignment="Stretch">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <!-- Informații meniu -->
                                        <StackPanel Grid.Column="0" VerticalAlignment="Top">
                                            <TextBlock Text="{Binding Name}" FontSize="20" FontWeight="Bold"/>
                                            <TextBlock Text="{Binding CalculatedPrice, StringFormat='Preț: {0:C}'}" Foreground="Blue" FontSize="16"/>
                                            <TextBlock Text="{Binding ComponentDetails}" FontStyle="Italic"/>
                                            <TextBlock Text="{Binding AllergensString, StringFormat='Alergeni: {0}'}" Foreground="Red"/>
                                            <TextBlock Text="{Binding IsAvailable, Converter={StaticResource BooleanToAvailabilityConverter}}" FontWeight="Bold"/>
                                        </StackPanel>

                                        <!-- Imagine meniu -->
                                        <Image Grid.Column="1"
                                               Source="{Binding ImageUrl}"
                                               MaxWidth="120"
                                               MaxHeight="120"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Top"
                                               Margin="10,0,0,0"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                </StackPanel>
            </ScrollViewer>

        </DockPanel>
    </Grid>
</Window>