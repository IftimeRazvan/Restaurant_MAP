<Window x:Class="Restaurant.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <DockPanel>
            <!-- Bara de căutare -->
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="10">
                <TextBox Text="{Binding SearchQuery}" Width="300"  />
                <ComboBox ItemsSource="{Binding Categories}"
                          SelectedItem="{Binding SelectedCategory}"
                          Width="200"
                          Margin="10,0"
                          SelectedIndex="0" />
                <Button Content="Reset" Command="{Binding ResetFilterCommand}" Width="100" Margin="10,0" />
            </StackPanel>

            <!-- Lista produselor -->
            <ItemsControl ItemsSource="{Binding AllDishes}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#DDD" BorderThickness="1" Padding="10" Margin="10">
                            <Grid Width="250">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Text="{Binding Name}" FontSize="18" FontWeight="Bold" />
                                <TextBlock Grid.Row="1" Text="{Binding Price, StringFormat={}{0:C}}" Foreground="Green" />
                                <TextBlock Grid.Row="2" Text="{Binding CategoryName}" FontStyle="Italic" />
                                <TextBlock Grid.Row="3" Text="{Binding AllergensString}" Foreground="Red" />
                                <TextBlock Grid.Row="4" Text="{Binding AvailabilityStatus}" />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- Buton navigare -->
            <StackPanel DockPanel.Dock="Bottom" HorizontalAlignment="Right" Margin="10">
                <Button Content="Vezi coșul" Command="{Binding GoToCartCommand}" Width="120" />
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
